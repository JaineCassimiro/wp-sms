<wpml-config>
    <!-- Configurações de textos administráveis do WP-SMS -->
    <admin-texts>
        <key name="wpsms_settings">
            <!-- Notificações gerais -->
            <key name="notif_publish_new_post_template"/>
            <key name="notif_publish_new_post_author_template"/>
            <key name="notif_user_login_template"/>
            <key name="notif_register_new_user_admin_template"/>
            <key name="notif_register_new_user_template"/>
            <key name="notif_new_comment_template"/>
            <key name="company_notice_notification_content"/>
            
            <!-- Newsletter -->
            <key name="newsletter_form_welcome_text"/>
            <key name="newsletter_form_gdpr_text"/>

            <!-- WooCommerce notificações -->
            <key name="wc_otp_text"/>
            <key name="wc_notify_product_message"/>
            <key name="wc_notify_order_message"/>
            <key name="wc_notify_customer_message"/>
            <key name="wc_notify_stock_message"/>
            <key name="wc_notify_status_message"/>
            <key name="wc_notify_by_status_content"/>

            <!-- Adicionado: Notificações específicas de status do WooCommerce -->
            <key name="wc_notify_order_pending"/>
            <key name="wc_notify_order_processing"/>
            <key name="wc_notify_order_completed"/>
            <key name="wc_notify_order_refunded"/>
            <key name="wc_notify_order_failed"/>

            <!-- Adicionado: Novas categorias de notificações -->
            <key name="notif_password_reset_template"/>
            <key name="notif_account_verification_template"/>
            <key name="notif_promotional_message"/>
            <key name="notif_custom_event_template"/>

            <!-- Adicionado: Configurações de SMS personalizáveis -->
            <key name="sms_signature"/>
            <key name="sms_sender_id"/>
            <key name="sms_global_prefix"/>
            <key name="sms_delivery_report_enabled"/>

            <!-- Adicionado: Respostas automáticas personalizadas -->
            <key name="auto_reply_help"/>
            <key name="auto_reply_order"/>
            <key name="auto_reply_promotion"/>
            <key name="auto_reply_thank_you"/>
            <key name="auto_reply_problem"/>
            <key name="auto_reply_contact"/>
            <key name="auto_reply_default"/>
        </key>
    </admin-texts>

    <!-- Adicionado: Configurações de tradução para post types personalizados -->
    <custom-types>
        <custom-type translate="1">sms_notifications</custom-type>
        <custom-type translate="1">sms_templates</custom-type>
    </custom-types>

    <!-- Adicionado: Campos personalizados -->
    <custom-fields>
        <custom-field action="translate">_sms_custom_message</custom-field>
        <custom-field action="translate">_sms_campaign_name</custom-field>
        <custom-field action="translate">_sms_recipient_group</custom-field>
    </custom-fields>

    <!-- Adicionado: Opções de tema específicas -->
    <theme-options>
        <key name="sms_theme_settings">
            <key name="sms_default_language"/>
            <key name="sms_enable_multilanguage_support"/>
            <key name="sms_enable_automatic_replies"/> <!-- Configuração para ativar respostas automáticas -->
        </key>
    </theme-options>
</wpml-config>